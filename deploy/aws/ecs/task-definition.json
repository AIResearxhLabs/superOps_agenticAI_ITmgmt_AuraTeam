{
  "family": "aura-app-dev",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::753353727891:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::753353727891:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "databases",
      "image": "753353727891.dkr.ecr.us-east-2.amazonaws.com/aura-databases:latest",
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5432,
          "protocol": "tcp",
          "name": "postgres"
        },
        {
          "containerPort": 6379,
          "protocol": "tcp",
          "name": "redis"
        },
        {
          "containerPort": 27017,
          "protocol": "tcp",
          "name": "mongodb"
        }
      ],
      "environment": [
        {
          "name": "POSTGRES_USER",
          "value": "aura_user"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "aura_password"
        },
        {
          "name": "POSTGRES_MULTIPLE_DATABASES",
          "value": "aura_servicedesk,aura_infratalent,aura_threatintel"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/aura-app-dev",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "databases"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "pg_isready -h localhost -p 5432 -U aura_user && redis-cli -h localhost -p 6379 ping && mongosh --host localhost:27017 --eval \"db.adminCommand('ping')\" || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "api-gateway",
      "image": "753353727891.dkr.ecr.us-east-2.amazonaws.com/aura-api-gateway:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp",
          "name": "api-gateway"
        }
      ],
      "environment": [
        {
          "name": "SERVICE_DESK_URL",
          "value": "http://localhost:8001"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://localhost:6379"
        },
        {
          "name": "ENVIRONMENT",
          "value": "aws-dev"
        },
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        }
      ],
      "dependsOn": [
        {
          "containerName": "databases",
          "condition": "HEALTHY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/aura-app-dev",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "api-gateway"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 30
      }
    },
    {
      "name": "service-desk-host",
      "image": "753353727891.dkr.ecr.us-east-2.amazonaws.com/aura-service-desk-host:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp",
          "name": "service-desk"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://aura_user:aura_password@localhost:5432/aura_servicedesk"
        },
        {
          "name": "MONGODB_URL",
          "value": "mongodb://localhost:27017/aura_servicedesk"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://localhost:6379"
        },
        {
          "name": "ENVIRONMENT",
          "value": "aws-dev"
        },
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:ssm:us-east-2:753353727891:parameter/aura/dev/openai-api-key"
        }
      ],
      "dependsOn": [
        {
          "containerName": "databases",
          "condition": "HEALTHY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/aura-app-dev",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "service-desk"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8001/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 30
      }
    }
  ]
}
